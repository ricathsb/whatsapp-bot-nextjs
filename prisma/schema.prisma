generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  nasabah   nasabah[]

  @@map("users")
}

model nasabah {
  id               String   @id @default(cuid())
  nama             String
  no_hp            String
  status           String
  status_langganan String
  nik              String   @unique
  no_kpj           String   @unique
  updatedAt        DateTime
  userId           String
  users            User     @relation(fields: [userId], references: [id])
}
